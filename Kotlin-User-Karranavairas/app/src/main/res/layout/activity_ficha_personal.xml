<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".actividades.FichaPersonal">

    <EditText
        android:id="@+id/txtNombres"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombres"
        android:layout_marginLeft="10dp"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/txtApellidos"
        android:layout_width="150dp"
        android:layout_marginLeft="200dp"
        android:layout_height="wrap_content"
        android:hint="Apellidos"
        android:ems="10"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spnNacionalidad"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp" />

    <Button
        android:id="@+id/btnRegistarse"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="400dp"
        android:src="@drawable/ovalo"
        android:text="Registrarse"
        android:onClick="onClick"
        android:textColor="@color/aqua" />

    <TextView
        android:id="@+id/idLatitud"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="350dp" />

    <TextView
        android:id="@+id/idLongitud"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="350dp" />


    <EditText
        android:id="@+id/txtDNI"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="DNI"
        android:layout_marginLeft="10dp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtNacimiento"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nacimiento"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="100dp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtTelefono"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:hint="Teléfono"
        android:layout_marginLeft="10dp"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/txtDireccion"
        android:layout_width="350dp"
        android:layout_marginTop="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:inputType="textPersonName"
        android:hint="Dirección"/>

    <Spinner
        android:id="@+id/spnTipoDocumentos"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="60dp" />

    <Spinner
        android:id="@+id/spnDistritos"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp" />

    <Spinner
        android:id="@+id/spnProvincias"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="200dp" />

    <Spinner
        android:id="@+id/spnDepartamentos"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="200dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="250dp"
        android:text="Departamento:" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="180dp"
        android:text="Provincias:" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        android:text="Distrito:" />

</RelativeLayout>